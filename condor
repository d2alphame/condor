#! /usr/bin/perl
use v5.34;
use strict;
use warnings;

use Getopt::Long;

my $sub_command;
my %dispatch_table = (
    start => \&command_start,
    stop => \&command_stop
);

if(@ARGV && exists $dispatch_table{$ARGV[0]}) {             # Check if the first argument is a valid sub command
    $dispatch_table{$ARGV[0]}();                            # Call the sub routine for the command. Each subroutine can handle its own arguments
} else {

}




# Sub routine to handle the 'start' sub command
sub command_start {
    say "Starting the service";
}


# Sub routine to handle the 'stop' sub command
sub command_stop {
    say "Stopping the service";
}